<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/lux/bootstrap.min.css">
    <link rel="stylesheet" href= "{{asset('assets/css/details.css')}}">
    <title> {% block title %} {% endblock %}</title>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark" id="navbar">
    <a class="navbar-brand" href="{{ path('home') }}">
        <img src="{{ asset('assets/images/icon.png') }}" height="75" alt="Logo">
    </a>

    <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('home') }}">Home</a>
            <li class="nav-item">
                <a class="nav-link " href="{{ path('searchevents') }}">Events</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="{{ path('searchplaces') }}">Places</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('searchindoors') }}">Indoor Activities</a>
            </li>

        </ul>
        {% if app.user %}
            <ul class="navbar-nav">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <b> Account</b>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="{{ path('account') }}">Modify Account</a>
                        <a class="dropdown-item" href="{{ path('account.activities.choice') }}">Jawek</a>
                        <a class="dropdown-item" href="{{ path('app_logout') }}">LogOut</a>
                    </div>
                </div>
            </ul>
        {% else %}
            <ul class="navbar-nav">
                <li class="nav-item"> <a class="btn btn-warning rounded" href="{{ path('app_login') }}">Log into JAWEK</a> </li>
                <li class="nav-item"> <a class="btn btn-warning rounded" href="{{ path('app_register') }}">Become a JAWISTI</a> </li>
            </ul>
        {% endif %}
    </div>
</nav>
<div class="container mt-2">

    <div class="card">

        <div class="card-body">
            <img id="img" src="{% block photo %} {% endblock %}" alt="...">

            {% block card %}

            {% endblock %}

        </div>
    </div>
</div>
</body>
</html>