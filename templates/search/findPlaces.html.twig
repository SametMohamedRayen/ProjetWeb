{% extends 'search/findPlanslayout.html.twig' %}

{% block other1 %} Events {% endblock %}
{% block other2 %} Indoor {% endblock %}
{% block name %} Find a place {% endblock %}
{% block activity %} a place {% endblock %}
{% block form %}
    {{ form(placeOptions) }}
{% endblock %}

{% block card%}
    <!--Endroit Card-->
    {% for place in places %}
        <div class="col-6 col-md-6 col-lg-4 mb-3">
            <div class="col">
                <div class="card">
                    <img src="assets/photos/restocard.jpg" class="card-img-top">
                    <div class="card-body">
                        <h5>Restaurant</h5>
                        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Soluta facilis voluptatibus laudantium nostrum qui magnam facere eligendi! Tempora maiores beatae corporis nam fugit, ut molestias cumque, explicabo ipsa voluptatem quo!</p>
                        <p>City:</p>
                        <button type="button" class="btn btn-dark rounded">Details</button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}

{% endblock %}

{% block Pagination %}
    <div>
        <ul class="pagination">
            {% if page >1 %}
                <li><a class="page-link" href="{{ path('searchplaces', {'page': page-1 }) }}" >&laquo; Previous</a></li>
            {% endif %}
            {% if page < maxpage %}
                <li><a class="page-link" href="{{ path('searchplaces', {'page': page+1 }) }}" >Next &raquo;</a></li>
            {% endif %}
        </ul>
    </div>
{% endblock %}